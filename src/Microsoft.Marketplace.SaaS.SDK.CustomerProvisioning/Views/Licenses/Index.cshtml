@model List<SubscriptionLicensesViewModel>
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<div class="container">
    <div class="card">
        <div class="card-header text-left">
            Licenses
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered dt-responsive" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <td>Subscription Id</td>
                                <td>Subscription Name</td>
                                <td>Plan Name</td>
                                <td>License Key</td>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = 0;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AmpsubscriptionId</td>
                                    <td>@item.SubscriptionName</td>
                                    <td>@item.PlanName</td>
                                    <td>
                                        <label id="Copy-@i">@item.LicenseKey</label>
                                        <span class="badge badge-info text-white">
                                            <button class="btn text-white btn-sm btnclipbord" type="button" data-clipboard-action="copy" data-clipboard-target="#Copy-@i"><i class="fa fa-clone" aria-hidden="true"></i></button>
                                        </span>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/clipboard.min.js"></script>
<script>
    $(document).ready(function () {
        $('table').dataTable({
            "bSort": false
        });
    });
    new ClipboardJS('.btnclipbord');
</script>
