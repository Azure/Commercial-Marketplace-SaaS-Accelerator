@model Marketplace.SaaS.Accelerator.AdminSite.Models.Offer.OffersListViewModel
@{
    ViewData["Title"] = "Offers";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<div class="container">
    <div class="">
        <div class="card-body" style="margin-left:-30px;">
            <div class="text-left">
                <span class="cm-section-heading">Offer Input Fields for Landing Page</span>
                <div>
                    Define fields to show up on the landing page when customer is subscribing to the offer.
                </div>
            </div>
            <div id="myModal">
                @if (Model != null && Model.LineItems.Any())
                {
                    <div class="table-responsive mt20">
                        <table class="table table-bordered dt-responsive cm-table" width="100%" cellspacing="0">
                            <thead class="cm-table-head">
                                <tr>
                                    <th>Offer ID</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var i = 0;}
                                @foreach (var item in Model.LineItems)
                                {
                                    <tr>
                                        <td class="text-left">
                                            @item.OfferId
                                        </td>
                                        <td class="text-left cm-ellipsis">
                                            <div class="nav-item dropdown">
                                                <a class="nav-link dropdown cm-link-button" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-bars"></i></a>
                                                <div class="dropdown-menu" aria-labelledby="dropdown01">
                                                    <a class="dropdown-item cm-dropdown-option" data-target="#myModal" onclick="ViewOfferdetailsById('@item.OfferGuid')">Edit</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="cm-panel-default mt40">
                        <div class="p-3 mr420">
                            <p>
                                You do not have any Offer!
                            </p>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<script>
    function ViewOfferdetailsById(offerGuId) {
        $.ajax({
            type: "Get",
            url: "Offers/OfferDetails",
            data: { offerGuid: offerGuId },
            contentType: "application/json; charset=utf-8",
            datatype: "json",
            success: function (data) {
                $('#myModal').html(data);
            },
            error: function () {
                alert("Failed to load offer details.");

            }
        });
    }

</script>

