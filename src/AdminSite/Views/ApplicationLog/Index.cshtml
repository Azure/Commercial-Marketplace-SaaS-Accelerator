@model List<Marketplace.SaaS.Accelerator.DataAccess.Entities.ApplicationLog>
@{
    ViewData["Title"] = "Index";
}
    <div>
        <div class="container">
            <div class="card-body ">
                <br />
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="text-left">
                            <span class="cm-section-heading">Manage Application Logs</span>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="overflow:auto" height="250px">
                    @if (Model.Count() > 0)
                    {
                        <table id="table" class="table table-striped table-bordered dt-responsive" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Action Time</th>
                                    <th>Log Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.Count; i++)
                                {
                                    var appLog = Model[i];
                                    <tr>
                                        <td class="text-left">@appLog.Id</td>
                                        <td class="text-left text-nowrap">@appLog.ActionTime</td>
                                        <td class="text-left">@appLog.LogDetail</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="cm-panel-default mt40">
                            <div class="p-3 mr420">
                                <p>
                                    No application logs found.
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

